<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <managed-bean>
        <managed-bean-name>simulation</managed-bean-name>
        <managed-bean-class>pl.edu.agh.ftj.DSClient.simulation.Simulation</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>visualization</managed-bean-name>
        <managed-bean-class>pl.edu.agh.ftj.DSClient.visualization.Visualization</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/simulationParameters.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>executeSimulation</from-outcome>
            <to-view-id>/resultList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gp</from-outcome>
            <to-view-id>/simulationParameters.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>resoultlist</from-outcome>
            <to-view-id>/resultList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>executeSimulation</from-outcome>
            <to-view-id>/resultList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>gp</from-outcome>
            <to-view-id>/simulationParameters.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>resoultlist</from-outcome>
            <to-view-id>/resultList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/vizualization.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>gp</from-outcome>
            <to-view-id>/simulationParameters.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>resoultlist</from-outcome>
            <to-view-id>/resultList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/resultList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>gp</from-outcome>
            <to-view-id>/simulationParameters.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>resoultlist</from-outcome>
            <to-view-id>/resultList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/layout.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
